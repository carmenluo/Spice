@model IEnumerable<SubCategory>
    @{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    }
<div class="border backgroundwhiteBorder">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Sub Category List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreatePartial"></partial>
        </div>
    </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr>
                <th>
                    @Html.DisplayNameFor(m => m.Name)
                </th>
                <th>  @Html.DisplayNameFor(m => m.Category.Name)</th>
                <th>
                </th>
            </tr>
            @foreach (var item in Model.ToList())
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Category.Name)
                    </td>
                    <td>
                        <partial name="_CreateDetailDeletePartial" model="item.Id">
                    </td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure')">
                            <button>Delete Here</button>
                        </form>

                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <P>I dont have Sub Category</P>
    }
    </div>


