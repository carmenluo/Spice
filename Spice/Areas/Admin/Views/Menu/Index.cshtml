@model IEnumerable<Menu>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br /><br />

<div class="border backgroundwhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Menu Item List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreatePartial" />
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {

            <table class="table table-striped border">
                <tr>
                    <th>
                        @Html.DisplayNameFor(m => m.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.CategoryId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.SubCategoryId)
                    </th>

                </tr>
                @foreach (var item in Model.ToList())
                {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.Name)
                    </td>
                    <td>
                        @Html.DisplayNameFor(m => item.Price)
                    </td>
                    <td>
                        @Html.DisplayNameFor(m => item.CategoryId)
                    </td>
                    <td>
                        @Html.DisplayNameFor(m => item.SubCategoryId)
                    </td>
                    <td>
                        <partial name="_CreateDetailDeletePartial" model="item.Id" />
                    </td>
                  

                </tr>
                }
            </table>
        }
        else
        {
            <p>
                No menu exists.
            </p>
        }
    </div>

</div>


