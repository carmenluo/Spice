@model Spice.Models.Coupon
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h1 class="text-info">Coupon Details</h1>
<div class="border backgroundwhiteBorder row ">
    <div class="col-8 border-right">
  

            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="from-group row">
                <div class="col-2">
                    <label asp-for="Name"></label>
                </div>

                <div class="col-5 ">
                    <input asp-for="Name" class=" form-control">
                </div>

                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="from-group row">
                <div class="col-2">
                    <label asp-for="CouponType"></label>
                </div>

                <div class="col-5 ">
                    <select asp-for="CouponType" asp-items="Html.GetEnumSelectList<Coupon.ECouponType>()" class="form-control"></select>
                </div>

                <span asp-validation-for="CouponType" class="text-danger"></span>
            </div>
            <div class="from-group row">
                <div class="col-2">
                    <label asp-for="Discount"></label>
                </div>

                <div class="col-5 ">
                    <input asp-for="Discount" class=" form-control">
                </div>

                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
            
            <div class="from-group row">
                <div class="col-2">
                    <label asp-for="isActive"></label>
                </div>

                <div class="col-5 ">
                    <input type="checkbox" asp-for="isActive" class=" form-control">
                </div>

            </div>
            <div class="from-group row">
                <div class="col-2">
                    <label asp-for="MinimumAmount"></label>
                </div>

                <div class="col-5 ">
                    <input asp-for="MinimumAmount" class=" form-control">
                </div>

            </div>
            <div class="form-group">
                <div class="offset-1">
                    <partial name="_DetailsReturnPartial" model="Model.Id"/>
                </div>
            </div>

    </div>

    <div class="col-3">
        <img src="data:image/png;base64, @Convert.ToBase64String(@Model.Picture);" width="100%" style="border-radius:5px;border:1px solid #808080" />
    </div>
</div>


@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

