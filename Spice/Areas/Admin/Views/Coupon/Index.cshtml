@model IEnumerable<Coupon>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br /><br />

<div class="border backgroundwhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Coupon List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreatePartial" />
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {

            <table class="table table-striped border">
                <tr>
                    <th>
                        @Html.DisplayNameFor(m => m.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.CouponType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Discount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.isActive)
                    </th>
                </tr>
                @foreach (var item in Model.ToList())
                {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.Name)
                    </td>
                    <th>
                        @Html.DisplayNameFor(m => m.CouponType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Discount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.isActive)
                    </th>
                    <td>
                        <partial name="_CreateDetailDeletePartial" model="item.Id" />
                    </td>
                    <td>
                        <a class="btn btn-danger text-white" value="Delete" asp-action="Delete" asp-route-Id="@item.Id"></a>
                        
                    </td>

                </tr>
                }
            </table>
        }
        else
        {
            <p>
                No category exists.
            </p>
        }
    </div>

</div>


